codeio> db.course.updateOne({name:"React"},{$set:{name:"REACT"}})
codeio> db.course.updateOne({_id: ObjectId('68d2d5e15ed1a5518ccebea4')},{$set:{name:"React"}})
💕💕💕
codeio> db.course.updateOne({name:"React"},{$unset:{completed:""}})                         //unset mean remove that Field
{
  acknowledged: true,
  insertedId: null,
  matchedCount: 1,
  modifiedCount: 1,
  upsertedCount: 0
}😎😎😎
codeio> db.course.find({name:"React"})                                      //these show after remove completed
[
  {
    _id: ObjectId('68d2d5e15ed1a5518ccebea4'),
    name: 'React',
    videos: 35,
    duration: 18.3,
    PublishedDate: ISODate('2025-09-23T00:00:00.000Z'),
    instructors: [ 'Goms', 'Bob' ],
    relatedCourses: { name: 'js', videos: 36, duration: 11 }
  }
]💚💚💚
codeio> db.course.updateOne({name:"React"},{$set:{completed:true}})               //you can anywhere at any time
{
  acknowledged: true,
  insertedId: null,
  matchedCount: 1,
  modifiedCount: 1,
  upsertedCount: 0
}
codeio> db.course.find({name:"React"})                                      //see the output😮😮😮
[
  {
    _id: ObjectId('68d2d5e15ed1a5518ccebea4'),
    name: 'React',
    videos: 35,
    duration: 18.3,
    PublishedDate: ISODate('2025-09-23T00:00:00.000Z'),
    instructors: [ 'Goms', 'Bob' ],
    relatedCourses: { name: 'js', videos: 36, duration: 11 },
    completed: true
  }
]

codeio> db.course.updateMany({completed:{$exists:false}},{$set:{completed:false}})       //exists:false mean completed where are not present that are set  
{
  acknowledged: true,
  insertedId: null,
  matchedCount: 5,
  modifiedCount: 5,
  upsertedCount: 0
}
codeio> db.course.find({},{_id:false,name:true,completed:true})              //see the output😮😮😮
[
  { name: 'DSA', completed: false },
  { name: 'JAVA', completed: false },
  { name: 'C++', completed: false },
  { name: 'React', completed: true },
  { name: 'Mongo DB', completed: false },
  { name: 'c++', completed: false }
]
🔥🔥🔥
codeio> db.course.updateMany({duration:10.5},{$set:{completed:true}})       //update this kind of type also
{
  acknowledged: true,
  insertedId: null,
  matchedCount: 2,
  modifiedCount: 2,
  upsertedCount: 0
}
codeio> db.course.find({},{_id:false,duration:true,completed:true})          //see the output😮😮😮
[

[
  { duration: 28.5, completed: false },
  { duration: 10.5, completed: true },
  { duration: 10.51, completed: false },
  { duration: 18.3, completed: true },
  { duration: 2.5, completed: false },
  { duration: 10.5, completed: true }
]
💥💥💥
codeio> db.course.updateMany({},{$set:{completed:true}})                  //this mean change all completed fields to true
{
  acknowledged: true,
  insertedId: null,
  matchedCount: 6,
  modifiedCount: 6,
  upsertedCount: 0
}
codeio> db.course.find({},{_id:false,duration:true,completed:true})
[
  { duration: 28.5, completed: true },
  { duration: 10.5, completed: true },
  { duration: 10.51, completed: true },
  { duration: 18.3, completed: true },
  { duration: 2.5, completed: true },
  { duration: 10.5, completed: true }
]
👇👇👇👇👇(Recap)
codeio> db.course.updateOne({name:"React"},{$unset:{completed:""}})
db.course.updateOne({name:"React"},{$set:{completed:true}})
db.course.updateMany({completed:{$exists:false}},{$set:{completed:false}})
db.course.updateMany({duration:10.5},{$set:{completed:true}})
db.course.updateMany({},{$set:{completed:true}})
